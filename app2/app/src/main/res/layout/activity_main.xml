<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_launcher_foreground"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bienvenue à l'application 2"
        android:textSize="24sp"
        android:textColor="#4CAF50"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <Button
        android:id="@+id/btn_add_event_to_app1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ajouter à la base de l'application 1"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#81C784"
        android:fontFamily="sans-serif"
        android:layout_marginBottom="16dp"
        android:elevation="4dp" />

    <Button
        android:id="@+id/btn_view_events_app1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Consulter la base de l'application 1"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#81C784"
        android:fontFamily="sans-serif"
        android:layout_marginBottom="16dp"
        android:elevation="4dp" />

    <Button
        android:id="@+id/btn_add_to_calendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ajouter au calendrier Android"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#81C784"
        android:fontFamily="sans-serif"
        android:layout_marginBottom="24dp"
        android:elevation="4dp" />

    <TextView
        android:id="@+id/tv_footer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Testez un ContentProvider avec une base externe."
        android:textSize="14sp"
        android:textColor="#4CAF50"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:paddingHorizontal="8dp" />
</LinearLayout>
